<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_agent_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    >
    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/redForBrand"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageViewClose">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            />
        <!--profile pic label-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:src="@drawable/user"
            android:elevation="15dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/agent_pic_edit2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="46dp"
            android:foregroundGravity="right"
            android:elevation="30dp"
            />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@drawable/small_box_style"
            android:elevation="4dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="46dp">


            <ImageView
                android:id="@+id/agent_pic_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="46dp"
                android:visibility="invisible"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollViewDown"
                android:layout_below="@+id/agent_pic_edit">
                <LinearLayout
                    android:id="@+id/linearPofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/agent_pic_edit"
                    android:orientation="vertical"
                    >
                    <!--CUSTOMER name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/customerName"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style2">
                            <EditText
                                android:id="@+id/editTextCustomerName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:enabled="false"
                                android:background="@android:color/transparent"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--care of-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style">
                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/careOf"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style2">
                            <EditText
                                android:id="@+id/editTextCareOf"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:enabled="false"
                                android:background="@android:color/transparent"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--customer type-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style">
                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/customerType"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style2">
                            <EditText
                                android:id="@+id/editTextCustomerType"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:enabled="false"
                                android:background="@android:color/transparent"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Territory-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style">
                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/territory"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style2">
                            <EditText
                                android:id="@+id/editTextTerritory"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:enabled="false"
                                android:background="@android:color/transparent"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Market-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginBottom="23dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style">
                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/market"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style2"
                            >
                            <EditText
                                android:id="@+id/editTextMarket"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:enabled="false"
                                android:background="@android:color/transparent"
                                android:textColor="@color/textColorTitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
